<%- include("head.ejs"); %>

<body class="page-body">
    <%- include("navbar.ejs"); %>
    <form
        action="/modulo2/<%=id_user%>/<%=id_project%>/avaliacao"
        method="post"
        class="floating-form"
    >
        <input class="back-button" type="button" onclick="history.back()" />

        <div class="table-responsive-lg">
            <table class="table table-striped table-lg">
                <thead>
                    <tr>
                        <th>Pergunta</th>
                        <th>Resposta</th>
                        <th>Pontuação</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (const item of rows){ %>
                    <tr>
                        <!--envia ID da pergunta para o Backend-->
                        <input
                            type="hidden"
                            name="idVariable"
                            value="<%= item.id %>"
                        />
                        <input
                            type="hidden"
                            name="YesOrNo"
                            value="<%= item.yes_or_no %>"
                        />
                        <!--------------------------------------->
                        <td><%= item.nome %></td>
                        <td>
                            <select name="resp">
                                <option value="<%=item.value%>" selected hidden>
                                    <%=item.value%>
                                </option>
                                <option value="Y">Y</option>
                                <option value="N">N</option>
                            </select>
                        </td>
                        <td><%= item.result %></td>
                    </tr>
                    <% } %>
                    <tr>
                        <td></td>
                        <td><%=risk%></td>
                        <td><%=sum%></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <!--SubmitButton-->
        <input
            type="submit"
            class="custom-button"
            name="submit"
            value="Enviar"
        />
    </form>
</body>
