<%- include("head.ejs"); %>

    <body>
        <%- include("navbar.ejs"); %>

            <div class="table-responsive-lg">
                <table class="table table-striped table-lg">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nome do Requisito</th>
                            <th>Condições</th>
                            <th>CRUD</th>
                            <th>Get / Set</th>
                            <th> SQL </th>
                            <th class="d-print-none">
                                <a class="btn btn-sm btn-success"
                                    href="/<%=id_user%>/newfunc_req/<%=id_project%>">Cadastrar novo
                                    Requisito</a>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (const item of data){ %>
                            <tr>
                                <td>
                                    <%= item.id %>
                                </td>
                                <td>
                                    <%= item.nome %>
                                </td>
                                <td>
                                    <%= item.condicao %>
                                </td>
                                <td>
                                    <%= item.crud %>
                                </td>
                                <td>
                                    <%= item.getset %>
                                </td>
                                <td>
                                    <%= item.sql_projeto %>
                                </td>
                                <td class="d-print-none">
                                    <a class="btn btn-sm btn-warning"
                                        href="/<%=id_user%>/edit/<%=id_project%>/req/<%= item.id %>">Edit</a>
                                    <a class="btn btn-sm btn-danger"
                                        href="/<%=id_user%>/delete/<%=id_project%>/req/<%= item.id %>">Delete</a>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
    </body>